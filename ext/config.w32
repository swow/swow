    ];
    ADD_SOURCES(configure_module_dirname + '\\' + LLHTTP_DIR + '\\src', LLHTTP_SOURCE_FILENAMES.join(" "), "swow_llhttp");
    ADD_FLAG("SWOW_GLOBAL_OBJS", "$(SWOW_LLHTTP_GLOBAL_OBJS)");
    ADD_FLAG("LIBS_SWOW", "$(SWOW_LLHTTP_GLOBAL_OBJS_RESP)");

