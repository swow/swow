    ];
    ADD_SOURCES(configure_module_dirname + '\\' + UV_DIR + '\\src\\win', UV_WIN_SOURCE_FILENAMES.join(" "), "swow_libuv");
    ADD_FLAG("SWOW_GLOBAL_OBJS", "$(SWOW_LIBUV_GLOBAL_OBJS)");
