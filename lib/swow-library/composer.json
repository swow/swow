{
    "name": "swow/swow-library",
    "description": "Coroutine-based concurrency library for PHP",
    "keywords": [
        "swow",
        "library"
    ],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "twose",
            "email": "twosee@php.net"
        }
    ],
    "support": {
        "issues": "https://github.com/swow/swow"
    },
    "require": {
        "php": ">=7.4",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0"
    },
    "suggest": {
        "ext-swow": "*"
    },
    "autoload": {
        "psr-4": {
            "Swow\\": "src/"
        },
        "files": [
            "src/functions.php",
            "src/Util/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SwowTest\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "test": [ "@php -dextension=swow ../../vendor/bin/phpunit" ]
    }
}
