{
    "name": "swow/swow",
    "description": "Coroutine-based concurrency library for PHP",
    "keywords": [
        "swow",
        "coroutine",
        "async",
        "event",
        "http",
        "websocket",
        "server",
        "client",
        "libcat",
        "libuv"
    ],
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "twose",
            "email": "twosee@php.net"
        }
    ],
    "support": {
        "issues": "https://github.com/swow/swow"
    },
    "require": {
        "php": ">=8.0",
        "psr/http-client": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "3.2.*",
        "phpunit/phpunit": ">=8.0",
        "rector/rector": "^0.12.8"
    },
    "suggest": {
        "ext-swow": "*"
    },
    "autoload": {
        "psr-4": {
            "Swow\\": "lib/swow-library/src/"
        },
        "files": [
            "lib/swow-library/src/functions.php",
            "lib/swow-library/src/Util/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "SwowTest\\": "lib/swow-library/tests"
        },
        "classmap": [
            "lib/php-stub-generator/src"
        ]
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "cs-check": [ "@php vendor/bin/php-cs-fixer fix --dry-run --diff" ],
        "cs-fix": [ "@php vendor/bin/php-cs-fixer fix" ],
        "rector": [ "@php vendor/bin/rector process --config=tools/rector.php" ],
        "sync-extension": [ "@php -n tools/extension/sync.php" ],
        "build-extension": [ "@php tools/builder/swow-builder" ],
        "rebuild-extension": [ "@build-extension --rebuild" ],
        "test-extension": [ "@php tools/extension/test.php" ],
        "test-library": [ "@php -dextension=swow vendor/bin/phpunit --configuration lib/swow-library lib/swow-library" ],
        "test": [ "@test-extension", "@test-library" ],
        "gen-stub": [ "@php -n -d extension=swow tools/stub/gen.php swow lib/swow-stub/src/Swow.php" ],
        "split": [ "@php -n tools/split.php" ]
    },
    "bin": [
        "tools/builder/swow-builder"
    ]
}
